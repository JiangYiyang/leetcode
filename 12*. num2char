int num2char(int x){
    switch(x){
        case 0 : return 73;
        case 1 : return 86;
        case 2 : return 88;
        case 3 : return 76;
        case 4 : return 67;
        case 5 : return 68;
        case 6 : return 77;
    }
    return 0;
}

char * intToRoman(int num){
    char s[100];
    char *p = s;
    int c_num[7] = {0};
    while(num != 0){
        if(num >= 1000){
            c_num[0]++;
            num -= 1000;
        }
        else if(num >= 500){
                c_num[1]++;
                num -= 500;
        }
        else if(num >= 100){
            c_num[2]++;
            num -= 100;
        }
        else if(num >= 50){
            c_num[3]++;
            num -= 50;
        }
        else if(num >= 10){
            c_num[4]++;
            num -= 10;
        }
        else if(num >= 5){
            c_num[5]++;
            num -= 5;
        }
        else if(num >= 1){
            c_num[6]++;
            num -= 1;
        }

    }

    // 应根据量级来进行循环，分千 0 ，百 1 2 ，十 3 4 ，个 5 6 

    // 先判断千
    if(c_num[0] > 0){
        char tmp[6];
        while(c_num[0] != 0){
            c_num[0]--;
            tmp[2-c_num[0]] = 77;
        }
        strcat(s,tmp);
    }

    // 之后是百个十
    for(int i = 1; i < 7; i = i + 2){
        switch(c_num[i]){
            case 0: if(c_num[i+1]<=3){
                char tmp[10];
                for(int j = 0; j < c_num[i+1]; j++){
                    tmp[i] = num2char(i+1);
                }
                strcat(s,tmp);
                }
                else if(c_num[i+1] == 4){
                    char tmp[10];
                    tmp[0] = num2char(i+1);
                    tmp[1] = num2char(i);
                    strcat(s,tmp);
                }

            case 1: if(c_num[i+1]<=3){
                char tmp[10];
                tmp[0] = num2char(i);
                for(int j = 1; j < c_num[i+1]+1; j++){
                    tmp[i] = num2char(i+1);
                }
                strcat(s,tmp);
                }
                else if(c_num[i+1] == 4){
                    char tmp[10];
                    tmp[1] = num2char(i+1);
                    tmp[0] = num2char(i-1);
                    strcat(s,tmp);
                }
        }
    }
    return p;
}

    // nums[9]  = 1   ;//I , 73     , 1001     ,
    // nums[6]  = 5   ;//V , 86     , 0110     ,
    // nums[8]  = 10  ;//X , 88     , 1000     ,
    // nums[12] = 50  ;//L , 76     , 1100     ,
    // nums[3]  = 100 ;//C , 67     , 0011     ,
    // nums[4]  = 500 ;//D , 68     , 0100     ,
    // nums[13] = 1000;//M , 77     , 1101     ,
